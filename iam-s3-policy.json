{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3FullAccessForSpiritedTravels",
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "arn:aws:s3:::spirited-travels-africa-mobile-app",
        "arn:aws:s3:::spirited-travels-africa-mobile-app/*"
      ]
    },
    {
      "Sid": "S3PublicAccessManagement",
      "Effect": "Allow",
      "Action": [
        "s3:PutBucketPolicy",
        "s3:GetBucketPolicy",
        "s3:DeleteBucketPolicy",
        "s3:PutBucketPublicAccessBlock",
        "s3:GetBucketPublicAccessBlock",
        "s3:PutBucketAcl",
        "s3:GetBucketAcl",
        "s3:PutBucketWebsite",
        "s3:GetBucketWebsite",
        "s3:DeleteBucketWebsite"
      ],
      "Resource": "arn:aws:s3:::spirited-travels-africa-mobile-app"
    }
  ]
}
