{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AmplifyDeploymentOnly",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameter",
        "ssm:PutParameter"
      ],
      "Resource": "arn:aws:ssm:us-east-1:743508003148:parameter/cdk-bootstrap/hnb659fds/version"
    },
    {
      "Sid": "CloudFormationForAmplifyOnly",
      "Effect": "Allow", 
      "Action": [
        "cloudformation:CreateStack",
        "cloudformation:UpdateStack",
        "cloudformation:DescribeStacks",
        "cloudformation:DescribeStackEvents",
        "cloudformation:CreateChangeSet",
        "cloudformation:DescribeChangeSet",
        "cloudformation:ExecuteChangeSet"
      ],
      "Resource": [
        "arn:aws:cloudformation:us-east-1:743508003148:stack/amplify-*",
        "arn:aws:cloudformation:us-east-1:743508003148:stack/CDKToolkit"
      ]
    },
    {
      "Sid": "AmplifyServicesOnly",
      "Effect": "Allow",
      "Action": [
        "cognito-idp:CreateUserPool",
        "cognito-idp:DescribeUserPool",
        "cognito-idp:UpdateUserPool",
        "cognito-idp:CreateUserPoolClient",
        "dynamodb:CreateTable",
        "dynamodb:DescribeTable",
        "dynamodb:UpdateTable",
        "lambda:CreateFunction",
        "lambda:GetFunction",
        "lambda:UpdateFunctionConfiguration",
        "apigateway:POST",
        "apigateway:GET",
        "apigateway:PUT"
      ],
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "aws:RequestedRegion": "us-east-1"
        }
      }
    },
    {
      "Sid": "AmplifyStorageOnly",
      "Effect": "Allow",
      "Action": [
        "s3:CreateBucket",
        "s3:GetBucketLocation",
        "s3:PutObject",
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::amplify-*",
        "arn:aws:s3:::amplify-*/*"
      ]
    },
    {
      "Sid": "MinimalIAMForServiceRoles",
      "Effect": "Allow",
      "Action": [
        "iam:CreateRole",
        "iam:GetRole", 
        "iam:PassRole"
      ],
      "Resource": "arn:aws:iam::743508003148:role/amplify-*"
    }
  ]
}
